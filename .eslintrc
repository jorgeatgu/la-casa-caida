{
  "env":
  {
    "browser": true,
    "es6": true
  },
  "globals":
  {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "d3": false,
    "react": true,
    "customElements": true,
    "HTMLImports": true,
    "Polymer": true,
    "ShadyDOM": true
  },
  "parserOptions":
  {
    "ecmaVersion": 6,
    "ecmaFeatures":
    {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "rules":
  {
    "indent": ["error", 2],
    "space-before-function-paren": ["error", "never"]
  }
}
