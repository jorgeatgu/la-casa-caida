---
import Layout from '../layouts/Layout.astro';
import SocialShare from '../components/SocialShare.astro';
import Kofi from '../components/Kofi.astro';

const title = "Página no encontrada - La casa caída | Evolución poblacional de Aragón";
const descripcion = "Lo sentimos, la página que buscas no existe. Descubre otros municipios interesantes de Aragón.";
---

<Layout title={title} descripcion={descripcion}>
  <div class="container-404">

    <section class="header-404">
      <h1 class="titulo-404">¡Vaya! Esta página ha caído</h1>
      <p class="subtitulo-404">Lo sentimos, parece que esta página no existe o ha sido despoblada, como tantos municipios aragoneses.</p>
      <div class="botones-404">
        <a href="/" class="boton-principal">
          Volver a la página principal
        </a>
      </div>

    </section>

    <section class="container-chart social-section">

      <Kofi />
    </section>
  </div>
</Layout>

<style>
  .container-404 {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header-404 {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }

  .titulo-404 {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .subtitulo-404 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .busqueda-container {
    margin-top: 2rem;
    margin-bottom: 2.5rem;
  }

  .texto-busqueda {
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
  }

  .botones-404 {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .boton-principal {
    background-color: #2563eb;
    color: white;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    transition: background-color 0.3s;
  }

  .boton-principal:hover {
    background-color: #1d4ed8;
  }

  .boton-secundario {
    background-color: #16a34a;
    color: white;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    transition: background-color 0.3s;
  }

  .boton-secundario:hover {
    background-color: #15803d;
  }

  .ilustracion-404 {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
  }

  .social-section {
    margin-top: 3rem;
  }

  @media (max-width: 640px) {
    .botones-404 {
      flex-direction: column;
      gap: 0.75rem;
    }

    .titulo-404 {
      font-size: 1.875rem;
    }
  }
</style>
