---
// SocialShare.astro
const { title, url = '', description = '' } = Astro.props;

// Obtener URL completa
const fullUrl = url || `${Astro.site?.origin}${Astro.url.pathname}`;

// Codificar valores para URL
const encodedTitle = encodeURIComponent(title);
const encodedDescription = description ? encodeURIComponent(description) : '';
const encodedUrl = encodeURIComponent(fullUrl);

// URLs de compartir
const whatsappUrl = `https://wa.me/?text=${encodedDescription}%20${encodedUrl}`;
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedDescription}&url=${encodedUrl}`;
const emailSubject = encodeURIComponent(`Te comparto: ${title}`);
const emailBody = encodeURIComponent(`${description}\n\n${fullUrl}`);
const emailUrl = `mailto:?subject=${emailSubject}&body=${emailBody}`;
---

<style>
  .social-share {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-top: 1rem;
  }

  .share-button {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    font-size: 14px;
    font-weight: 500;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .share-button:hover {
    opacity: 0.8;
  }

  .whatsapp {
    background-color: #62c86f;
  }

  .twitter {
    background-color: black;
  }

  .email {
    background-color: #2563eb;
  }

  .share-icon {
    width: 20px;
    height: 20px;
    margin-right: 8px;
  }

  @media (max-width: 640px) {
    .social-share {
      flex-direction: column;
    }

    .share-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<div class="social-share">
  <!-- WhatsApp -->
  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="share-button whatsapp"
    title="Compartir en WhatsApp"
  >
    <svg
      class="share-icon"
      fill="currentColor"
      viewBox="0 0 24 24"
    >
